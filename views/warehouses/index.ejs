<% layout('layouts/boilerplate') %>
<div class="container my-5">
    <h1 class="text-center text-success mb-5">Warehouse List</h1>

    <% for (let warehouse of warehouses) { %>
    <div class="card mb-4 shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-4">
                <% if (warehouse.image) { %>
                <img src="<%= warehouse.image %>" class="img-fluid rounded-start h-100" alt="<%= warehouse.title %>">
                <% } else { %>
                <img src="https://via.placeholder.com/300x200.png?text=No+Image+Available"
                     class="img-fluid rounded-start h-100" 
                     alt="Default Warehouse Image">
                <% } %>
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title text-primary fw-bold"><%= warehouse.title %></h3>
                    <p class="card-text text-muted">
                        <%= warehouse.description || "No description available for this warehouse." %>
                    </p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Location:</strong> <%= warehouse.location %></li>
                        <li class="list-group-item"><strong>Type:</strong> <%= warehouse.type %></li>
                        <li class="list-group-item"><strong>Storage Capacity:</strong> <%= warehouse.storageCapacity %> m³</li>
                        <li class="list-group-item"><strong>Goods Stored:</strong> <%= warehouse.goodsStored %></li>
                        <li class="list-group-item"><strong>Price:</strong> ₹<%= warehouse.price %></li>
                    </ul>
                    <div class="mt-3">
                        <a href="/warehouses/<%= warehouse._id %>" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>
