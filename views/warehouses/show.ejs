<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<div class="row">
    <div class="col-6">
        <% if (warehouse.images && warehouse.images.length) { %>
        <div id="warehouseCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% warehouse.images.forEach((img, i) => { %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img src="<%= img.url %>" class="d-block w-100" alt="<%= warehouse.title %>">
                </div>
                <% }) %>
            </div>
            <% if (warehouse.images.length > 1) { %>
            <a class="carousel-control-prev" href="#warehouseCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#warehouseCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>
        <% } else { %>
        <div class="alert alert-info text-center">No images available for this warehouse.</div>
        <% } %>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= warehouse.title %></h5>
                <p class="card-text"><%= warehouse.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">Location: <%= warehouse.location %></li>
                <li class="list-group-item">Goods Stored: <%= warehouse.goodsStored %></li>
                <li class="list-group-item">Storage Capacity: <%= warehouse.storageCapacity %> tons</li>
                <li class="list-group-item">Type: <%= warehouse.type %></li>
                <li class="list-group-item">Price: â‚¹<%= warehouse.price %></li>
            </ul>
            <% if (currentUser && warehouse.author && warehouse.author.equals(currentUser._id)) { %>
            <div class="card-body">
                <a href="/warehouses/<%= warehouse._id %>/edit" class="btn btn-secondary">Edit</a>
                <form action="/warehouses/<%= warehouse._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                Last updated 
                <% if (warehouse.updatedAt) { %>
                    <%= warehouse.updatedAt.toLocaleString() %>
                <% } else { %>
                    Not available
                <% } %>
            </div>
        </div>
    </div>
</div>
