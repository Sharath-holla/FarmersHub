<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <h1 class="text-center">Edit Warehouse</h1>
    <div class="col-md-8 offset-md-2">
        <form action="/warehouses/<%= warehouse._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" id="title" name="warehouse[title]" value="<%= warehouse.title %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" class="form-control" id="location" name="warehouse[location]" value="<%= warehouse.location %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price (₹)</label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" class="form-control" id="price" name="warehouse[price]" value="<%= warehouse.price %>" required>
                </div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="warehouse[description]" rows="4" required><%= warehouse.description %></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="goodsStored">Goods Stored</label>
                <input type="text" class="form-control" id="goodsStored" name="warehouse[goodsStored]" value="<%= warehouse.goodsStored %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="storagecapacity">Storage Capacity (m³)</label>
                <input type="number" class="form-control" id="storagecapacity" name="warehouse[storageCapacity]" value="<%= warehouse.storageCapacity %>" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="type">Type</label>
                <select class="form-select" id="type" name="warehouse[type]" required>
                    <option value="<%= warehouse.type %>" selected><%= warehouse.type %></option>
                    <option value="Cold Storage">Cold Storage</option>
                    <option value="Dry Storage">Dry Storage</option>
                    <option value="Public Warehouse">Public Warehouse</option>
                    <option value="Private Warehouse">Private Warehouse</option>
                </select>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add More Image(s)...</label>
                <input type="file" class="form-control" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <% warehouse.images.forEach(function (img, i) { %>
                <img src="<%= img.thumbnail %>" class="img-thumbnail me-2" alt="Warehouse Image">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                    <label for="image-<%= i %>">Delete?</label>
                </div>
                <% }) %>
            </div>
            <button type="submit" class="btn btn-info w-100">Update Warehouse</button>
        </form>
        <a class="btn btn-outline-secondary w-100 mt-3" href="/warehouses">Back to Warehouse List</a>
    </div>
</div>




