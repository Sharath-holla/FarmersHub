<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add New Product</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/products" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="product[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <!-- Description -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="product[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <!-- Price -->
            <div class="mb-3">
                <label class="form-label" for="price">Price (in ₹)</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">₹</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="product[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Stock Quantity -->
            <div class="mb-3">
                <label class="form-label" for="stock">Stock Quantity</label>
                <input class="form-control" type="number" id="stock" name="product[stock]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <input class="form-control" type="text" id="category" name="product[category]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mb-3">
                <button class="btn btn-success">Add Product</button>
            </div>
        </form>
        
        <!-- Link Back to Product List -->
        <a href="/products">Back to Products</a>
    </div>
</div>
