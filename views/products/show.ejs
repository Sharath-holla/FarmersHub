<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="row">
    <div class="col-6">
        <% if (product.images && product.images.length) { %>
        <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% product.images.forEach((img, i) => { %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img src="<%= img.url %>" class="d-block w-100" alt="<%= product.name %>">
                </div>
                <% }) %>
            </div>
            <% if (product.images.length > 1) { %>
            <a class="carousel-control-prev" href="#productCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#productCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>
        <% } else { %>
        <div class="alert alert-info text-center">No images available for this product.</div>
        <% } %>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <h6 class="text-success">â‚¹<%= product.price %></h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">Category: <%= product.category %></li>
                <li class="list-group-item">Stock Quantity: <%= product.stock %></li>
            </ul>
            <% if (currentUser && product.author && product.author.equals(currentUser._id)) { %>
            <div class="card-body">
                <a href="/products/<%= product._id %>/edit" class="btn btn-secondary">Edit</a>
                <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                Last updated 
                <% if (product.updatedAt) { %>
                    <%= product.updatedAt.toLocaleString() %>
                <% } else { %>
                    Not available
                <% } %>
            </div>
        </div>
    </div>
</div>
