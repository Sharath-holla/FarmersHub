<% layout('layouts/boilerplate') %>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">My Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/wishlist">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
                <% if (user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container my-5">
    <h1 class="text-center text-success mb-5">Product List</h1>

    <% for (let product of products) { %>
    <div class="card mb-4 shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-4">
                <% if (product.images.length > 0) { %>
                <img src="<%= product.images[0].thumbnail %>" class="img-fluid rounded-start h-100" alt="<%= product.name %>">
                <% } else { %>
                <img src="https://via.placeholder.com/300x200.png?text=No+Image+Available"
                     class="img-fluid rounded-start h-100" 
                     alt="Default Product Image">
                <% } %>
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title text-primary fw-bold"><%= product.name %></h3>
                    <p class="card-text text-muted">
                        <%= product.description || "No description available for this product." %>
                    </p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Category:</strong> <%= product.category %></li>
                        <li class="list-group-item"><strong>Price:</strong> â‚¹<%= product.price %></li>
                        <li class="list-group-item"><strong>Stock Quantity:</strong> <%= product.stock %></li>
                    </ul>
                    <div class="mt-3">
                        <a href="/products/<%= product._id %>" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>
