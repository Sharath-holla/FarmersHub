<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Food Security Technology</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Header */
        header {
            background: linear-gradient(135deg, #009688, #4caf50);
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 1s ease-out;
        }

        header h1 {
            font-size: 1.8rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
        }

        nav ul li a {
            text-decoration: none;
            color: white;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 20px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        nav ul li a:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

        /* Container */
        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            animation: fadeIn 2s ease;
        }

        /* Search Bar Styling */
        .search-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-bar input {
            padding: 10px;
            border: 2px solid #4caf50;
            border-radius: 5px;
            width: 70%; /* Adjust width as needed */
            margin-right: 10px;
        }

        .search-bar button {
            background: linear-gradient(135deg, #4caf50, #009688);
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .search-bar button:hover {
            background: #00695c;
            transform: scale(1.05);
        }

        /* Form Styles */
        form label {
            font-weight: bold;
            display: block;
            margin: 15px 0 5px;
            font-size: 1.1rem;
        }

        form input,
        form textarea,
        form select {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 2px solid #4caf50;
            border-radius: 5px;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        form input:focus,
        form textarea:focus,
        form select:focus {
            border-color: #009688;
            box-shadow: 0 0 8px rgba(0, 150, 136, 0.5);
        }

        /* Button */
        form button {
            background: linear-gradient(135deg, #4caf50, #009688);
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1.2rem;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        form button:hover {
            background: #00695c;
            transform: scale(1.05);
        }

        /* Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Media Queries */
        @media (max-width: 768px) {
            header h1 {
                font-size: 1.5rem;
            }

            nav ul {
                gap: 10px;
            }

            .container {
                width: 90%;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <h1>Edit Food Security Technology</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
            </ul>
        </nav>
    </header>

    <!-- Search Bar -->
    <div class="container">
        <div class="search-bar">
            <form action="/foodsecurity/search" method="GET">
                <input type="text" name="search" placeholder="Search for technologies..." required>
                <button type="submit">Search</button>
            </form>
        </div>
    </div>

    <!-- Form Content -->
    <div class="container">
        <form action="/foodsecurity/<%= record._id %>?_method=PUT" method="POST">
            <!-- Title -->
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= record.title %>" required>

            <!-- Description -->
            <label for="description">Description</label>
            <textarea id="description" name="description" required><%= record.description %></textarea>

            <!-- Salient Features -->
            <label for="salientFeatures">Salient Features (Comma Separated)</label>
            <input type="text" id="salientFeatures" name="salientFeatures" value="<%= record.salientFeatures.join(', ') %>">

            <!-- Benefits -->
            <label for="benefits">Benefits (Comma Separated)</label>
            <input type="text" id="benefits" name="benefits" value="<%= record.benefits.join(', ') %>">

            <!-- Cost -->
            <label for="cost">Cost</label>
            <input type="text" id="cost" name="cost" value="<%= record.cost %>" required>

            <!-- Developer Name -->
            <label for="developerName">Developer Name</label>
            <input type="text" id="developerName" name="developerName" value="<%= record.developer.name %>" required>

            <!-- Developer Organization -->
            <label for="developerOrganization">Developer Organization</label>
            <input type="text" id="developerOrganization" name="developerOrganization" value="<%= record.developer.organization %>">

            <!-- Contact Details -->
            <label for="director">Director</label>
            <input type="text" id="director" name="director" value="<%= record.contactDetails.director %>">

            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= record.contactDetails.email %>" required>

            <label for="address">Address</label>
            <textarea id="address" name="address" required><%= record.contactDetails.address %></textarea>

            <label for="website">Website</label>
            <input type="url" id="website" name="website" value="<%= record.contactDetails.website %>">

            <!-- Submit Button -->
            <button type="submit">Update Technology</button>
        </form>
    </div>
</body>
</html>